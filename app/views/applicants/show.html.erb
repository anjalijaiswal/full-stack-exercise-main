<p style="color: green"><%= notice %></p>

<%= render @applicant %>

<div>
  <% if @applicant.status_history.exists? %>
    <%= link_to "View all Status Changes", status_history_index_path(applicant_id: @applicant), data: { turbo: false } %> |
  <% end %>

  <%= link_to "Edit this applicant", edit_applicant_path(@applicant) %> |
  <%= link_to "Back to applicants", applicants_path %>

  <%= button_to "Destroy this applicant", @applicant, method: :delete %>
</div>
